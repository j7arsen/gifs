<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="materialButtonStyle">@style/Widget.TestTask.PrimaryButton</item>
        <item name="textInputStyle">@style/Widget.TestTask.TextInputLayout.Outlined</item>

        <item name="textAppearanceBody1">@style/TextAppearance.TestTask.Body1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TestTask.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TestTask.Subtitle2</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TestTask.Headline5</item>
    </style>

    <style name="Widget.TestTask.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="fontWeight">600</item>
        <item name="fontStyle">normal</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.TestTask.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="endIconDrawable">@drawable/ic_cancel</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/light_gray</item>
        <item name="startIconTint">@color/light_gray</item>
    </style>

    <style name="TextAppearance.TestTask.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextAppearance.TestTask.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TextAppearance.TestTask.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="TextAppearance.TestTask.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">28sp</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>